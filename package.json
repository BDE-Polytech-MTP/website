{
  "name": "bde-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "12.18.2",
    "npm": "6.14.5"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && cd website-front && npm run generate",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:docker": "run-p start:docker:database start:docker:website",
    "docker:database:inspect": "docker exec -it website_postgres_1 psql -U postgres -d postgres",
    "start:docker:website": "run-p start:docker:front start:docker:backend",
    "start:docker:database": "docker-compose -f docker-compose.postgres.yml up",
    "start:docker:backend": "env-cmd -f compose.env npm run start:dev",
    "start:docker:front": "cd website-front && npm run dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "postinstall": "cd website-front && npm install"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/graphql": "^7.11.0",
    "@nestjs/platform-fastify": "^7.6.15",
    "@nestjs/serve-static": "^2.1.4",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "apollo-server-fastify": "^3.3.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.12.2",
    "dayjs": "^1.10.7",
    "fastify": "^3.15.0",
    "fastify-swagger": "^3.5.0",
    "graphql": "^15.5.3",
    "graphql-tools": "^7.0.4",
    "handlebars": "^4.7.7",
    "hbs": "^4.1.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "nodemailer": "^6.5.0",
    "pg": "^8.6.0",
    "point-of-view": "^4.14.0",
    "rand-token": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.7",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/bcrypt": "^3.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.41",
    "@types/nodemailer": "^6.4.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-loader": "^8.2.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typeorm-fixtures-cli": "^1.9.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "restoreMocks": true
  }
}
